<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/feed_profile_picture"
                    android:transitionName="profilePictureView"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    />
                <TextView
                    android:id="@+id/feed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_toRightOf="@id/feed_profile_picture"
                    android:clickable="true"
                    android:text="New Album!"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/feed_album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/feed_profile_picture"
                    android:layout_below="@+id/feed_text"
                    android:clickable="true"
                    android:text="Vacations in California 2015"
                    android:textSize="16sp"
                    android:textColor="@color/link"
                    />

                <TextView
                    android:id="@+id/feed_profile_name_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:layout_toRightOf="@id/feed_profile_picture"
                    android:layout_below="@id/feed_album_name"
                    android:text="by "
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/feed_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:layout_toRightOf="@id/feed_profile_name_by"
                    android:layout_below="@id/feed_album_name"
                    android:clickable="true"
                    android:text="Jhon"
                    android:textColor="@color/link"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/feed_profile_name_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:layout_toRightOf="@id/feed_author_name"
                    android:layout_below="@id/feed_album_name"

                    android:textSize="14sp"
                    />



            </RelativeLayout>






        </LinearLayout>
</android.support.v7.widget.CardView>
