<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PhotoDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo_detail_photo"
                android:transitionName="pictureView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/teste"
                android:adjustViewBounds="true"
                />

            <RelativeLayout
                android:id="@+id/photo_detail_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/photo_detail_profile_picture"
                        android:transitionName="profilePictureView"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        />

                    <TextView
                        android:id="@+id/photo_detail_description"
                        android:transitionName="descriptionView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:maxLength="50"
                        android:ellipsize="end"
                        android:text="@string/dumb_description"
                        android:textSize="16sp"
                        android:layout_weight="0.5"
                        />

                    <ImageButton
                        android:id="@+id/photo_detail_like_bt"
                        android:src="@drawable/thumbs_outline"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/photo_detail_number_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="+44"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/photo_detail_comment_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Comment"
                    android:layout_weight=".5"/>

                <ImageButton
                    android:id="@+id/photo_detail_send_bt"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/photo_detail_comments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

